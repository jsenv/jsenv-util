{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "node",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${file}",
      "runtimeVersion": "13.6.0",
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        // force-array-multiline
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@dmail/cancellation/**",
        "node_modules/prettier/**",
        "<node_internals>/**"
      ]
    },
    {
      "name": "node13",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${file}",
      "runtimeVersion": "13.8.0",
      "runtimeArgs": [
        "--unhandled-rejections=strict",
        "--experimental-json-modules",
        // this is to disable experimental warning
        "--no-warnings"
      ],
      // "args": ["--coverage"],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        // force-array-multiline
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@dmail/cancellation/**",
        "node_modules/@rollup/**",
        "node_modules/puppeteer/**",
        "<node_internals>/**"
      ]
    },
    {
      "name": "jsenv-node",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceFolder}/script/run-node/run-node.js",
      "args": ["${relativeFile}"],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        // force-array-multiline
        // "node_modules/**",
        "node_modules/@jsenv/core/**",
        "script/run-node/**",
        "node_modules/@babel/template/**",
        "node_modules/@dmail/cancellation/**",
        "node_modules/rollup/**",
        "node_modules/rollup-plugin-node-resolve/**",
        "<node_internals>/**/*.js"
      ]
    },
    {
      "name": "jsenv-node-attach-child",
      "type": "node",
      "request": "attach",
      "port": 40000,
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": [
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@dmail/cancellation/**",
        "node_modules/rollup/**",
        "node_modules/rollup-plugin-node-resolve/**",
        "<node_internals>/**/*.js"
      ]
    },
    {
      "name": "jsenv-node-attach-subchild",
      "type": "node",
      "request": "attach",
      "port": 40001,
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": [
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@dmail/cancellation/**",
        "node_modules/rollup/**",
        "node_modules/rollup-plugin-node-resolve/**",
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
